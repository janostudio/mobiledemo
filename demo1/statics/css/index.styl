body 
  width: 100%
  height: 100%
  font-family: "Microsoft YaHei","微软雅黑","MicrosoftJhengHei","华文细黑","STHeiti"
  color: #fff
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  overflow: hidden

.container
  position: absolute
  width: 100%
  height: 100%
  overflow: hidden

.bg-mask
  @extend .container
  // background: url(../images/mask.png) center center

.modal-wrapper
  @extend .container
  background-color: rgba(0,0,0,0.6)
  z-index: 100
  0.6219
  300
  .generate-modal
    position: relative
    width: 80%
    height: 482.4px
    margin-left: 10%
    background-color: #fff
    animation: opc 1s ease
    img
      width: 100%
      height: 100%
    .close-btn
      display: block
      position: absolute
      width: 60px
      height: 60px
      overflow: hidden
      border-radius: 50%
      background-color: rgba(255,255,255,0.8)
      color: rgba(0,0,0,0.6)
      text-align: center
      line-height: 70px
      font-size: 80px
      left: 50%
      margin-left: -30px
      margin-top: 20px
.hide
  display: none

.loading, #content
  position: absolute
  width: 100%
  height: 100%
.loading
  opacity: 1
  transition: opacity 1s ease

#content-bg
  position: absolute
  width: 100%
  height: 100%
  background-color: #a7d9e5
  // background: linear-gradient(to top,#341839 0%,#a3a3a3 90%)
  &.wind
    background-color: #d9eab9
  &.humidity
    background-color: #fff4e1
  &.rain
    background-color: #e1d8ef

.loadAnimate
  width: 224px
  height: 263px
  background-image: url(../images/loading.png)
  animation: loading .5s steps(24) infinite
  position: absolute
  top: 50%
  left: 50%
  margin-left: -112px
  margin-top: -131px

#content
  #header
    width: 100%
    height: 10vh
  #window
    height: 60%
    width: 100%
    opacity: 1
    animation: opc 1s ease
  #control
    position: absolute
    left: 0px
    bottom: 0px
    width: 100%
    height: auto
    margin: 0 auto
    z-index: 5
    animation: control-bottom 1s ease
    .control-bg, .control-play-btn
      width: 80%
      margin-left: 10%
      margin-bottom: 20px
    .target-groups
      position: absolute
      top: 0px
      width: 88.8%
      height: 37.7%
      margin: 0 auto
      padding-top: 5.7%
      padding-left: 5.6%
      .box
        z-index: -1
        display: none
      .target
        position: relative
        float: left
        width: 12.5%
        height: 100%
        text-align: center
        font-family: "Asap", "Avenir", "Arial", "sans-serif"
        line-height: 70px
        color: black
        margin: 0
        padding: 0
        border-radius: 36px
        background-color: rgba(255,255,255,0.2)
        box-shadow: inset 0 0 20px rgba(255, 255, 255, 0.6)
        &:not(:last-child)::before
          content: ''
          width: 0.5px
          height: 30%
          border-right: 1px #313131 solid
          position: absolute
          right: 0.5px
          top: 35%
          opacity: 0.2
          z-index: 5   
        &:not(:last-child)::after
          content: ''
          width: 0.5px
          height: 30%
          border-right: 1px #fff solid
          position: absolute
          right: -0.5px
          top: 35%
          opacity: 0.5
          z-index: 5  
        &.noline
          &::before
            content: unset
          &::after
            content: unset
    .rest-btn
      left: 3%
    .next-btn  
      right: 3%
      background: linear-gradient(to right, rgba(235,232,128,0.8) 0%, rgba(163,213,167,1) 40%, rgba(92,211,204,1) 100%)
    .fail
      opacity: 0.7
      background: rgba(256,256,256,0.2) !important
    .generate_btn
      position: absolute;
      bottom: 10px;
      left: 2%;
      width: 96%;
      height: 50px;
      overflow: hidden
      border-radius: 25px;
      div
        float: left
        width: 50%
        height: 50px


.guide
  position: absolute
  top: 40%
  width: 6px
  height: 42%
  background-color: #ff376b
  border-radius: 20px
  z-index: 10

.btn
  font-size: 1em
  width: 20vw
  height: 20vw
  position: absolute
  bottom: 0px
  background: linear-gradient(to right, rgba(92,211,204,1) 0%, rgba(163,213,167,1) 40%, rgba(235,232,128,0.8) 100%)
  box-shadow: inset 0 0 20px rgba(255, 255, 255, 0.7)
  border-radius: 20px
  text-align: center
  letter-spacing: 2px
  bottom: 5%
  transition: all 0.4s ease-in-out
  img
    width: 100%
    position: relative
    opacity: 1
    transition: all 0.3s ease-in-out

.header-bg
  width: 100%
  opacity: 1
  animation: header-bg 1s ease

.box
  text-align: center
  font-family: "Asap", "Avenir", "Arial", "sans-serif"
  width: 11%
  height: 37.4%
  color: black
  position: absolute
  top: 52.2%
  border-radius: 34px
  background-size: 50%
  background-repeat: no-repeat
  background-position: center center
  box-shadow: inset 0 0 15px rgba(255, 255, 255, 0.6)
  cursor: move 
  &.dragger1
    left: 30.85%
  &.dragger2
    left: 44.45%
  &.dragger3
    left: 58.04%

.draggable_rain
  background: rgba(90,219,154,0.8)  url(../images/rain.png) no-repeat center !important
  background-size: 60% 50% !important
.draggable_humidity
  background: rgba(243,204,75,0.8) url(../images/humidity.png) no-repeat center !important
  background-size: 60% 50% !important
.draggable_wind
  background: rgba(192,181,215,0.8) url(../images/wind.png) no-repeat center !important
  background-size: 60% 50% !important

.animation-header
  animation: header-bg 1s ease
  img
    width: 80%
    margin-left: 10%
    margin-top: 20px
.animation-box
  width: 640px
  height: 1029px
  text-align: center
  position: absolute
  top: 50%
  left: 50%
  margin-left: -320px
  margin-top: -480px
  background-position: 0px 0px
  z-index: 2
  animation: characterAnimate 1s steps(24) infinite
  transform: matrix(0.585938, 0, 0, 0.585938, 0, 0)
  margin-top: -460px
.home-normal
  background-image: url(../images/home_normal.png)
.animation-normal
  background-image: url(../images/main_normal.png)
.animation-draggable_rain
  background-image: url(../images/draggable_rain.png)
.animation-draggable_humidity
  background-image: url(../images/draggable_humidity.png)
.animation-draggable_wind
  background-image: url(../images/draggable_wind.png)

@keyframes opc {
  0% {
    opacity: 0
  }
  100% {
    opacity: 1
  }
}

@keyframes header-bg {
  0% {
    transform: translateY(-100%) scale(0.8)
    opacity: 0
  }
  100% {
    opacity: 1
    transform: matrix(1, 0, 0, 1, 0, 0)
  }
}

@keyframes loading {
  100% { 
    background-position: 0px  -6312px
  }
}

@keyframes control-bottom {
  0% { 
    bottom: -200px
  }
  100% { 
    bottom: 0px
  }
}

@keyframes characterAnimate {
  0% { 
    background-position: 0px 0px
  }
  100% { 
    background-position: 0px -24696px
  }
}

